<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_login_rp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/rp_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="44dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_login_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="38dp"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/user_login_account_login"
                android:textColor="@color/color_selector_navibar_blue_black"
                android:textSize="@dimen/txt_login_ui_title" />

            <RadioButton
                android:id="@+id/rb_register_title"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:button="@null"
                android:gravity="center"
                android:text="@string/user_login_account_regist"
                android:textColor="@color/color_selector_navibar_blue_black"
                android:textSize="@dimen/txt_login_ui_title" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp">

            <TextView
                android:id="@+id/tv_login_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:background="@drawable/img_login_close" />
        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_login"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_login_rp"></android.support.v4.view.ViewPager>

</LinearLayout>