<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/iv_news_img_show"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/tv_item_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和哈哈哈哈哈哈哈哈哈 "
            android:textColor="@color/comm_gray_high"
            android:textSize="@dimen/txt_size_third" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30分钟前 "
                android:textColor="@color/comm_gray_low"
                android:textSize="@dimen/txt_size_fourth" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/comm_gray_low"
                android:textSize="@dimen/txt_size_fourth" />

            <TextView
                android:id="@+id/tv_item_news_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30分钟前 "
                android:textColor="@color/comm_gray_low"
                android:textSize="@dimen/txt_size_fourth" />

            <TextView
                android:id="@+id/tv_item_news_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30分钟前 "
                android:textColor="@color/comm_gray_low"
                android:textSize="@dimen/txt_size_fourth" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>