<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_shape_white_gray_low_small"
    android:clickable="true"
    android:id="@+id/layout_main"
    android:orientation="vertical" >
	
    <ImageView
        android:id="@+id/img_main_pic"
        android:layout_width="@dimen/view_cartoon_width_first"
        android:layout_height="@dimen/view_cartoon_height_first"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp" />
	
    <TextView
        android:id="@+id/txt_chapter"
        android:layout_width="@dimen/view_cartoon_width_first"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/img_main_pic"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/trans_pic"
        android:gravity="right|center_vertical"
        android:singleLine="true"
        android:visibility="invisible"
        android:textColor="@color/comm_gray_mid"
        android:textSize="@dimen/txt_size_third" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="145dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@id/img_main_pic"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/comm_gray_high"
            android:textSize="@dimen/txt_size_first" />

        <TextView
            android:id="@+id/txt_author"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:textColor="@color/comm_gray_mid"
            android:textSize="@dimen/txt_size_third" />

        <TextView
            android:id="@+id/txt_class"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:textColor="@color/comm_gray_mid"
            android:textSize="@dimen/txt_size_third" />

        <TextView
            android:id="@+id/txt_latests"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/comm_gray_mid"
            android:textSize="@dimen/txt_size_third" />
    </LinearLayout>

</RelativeLayout>