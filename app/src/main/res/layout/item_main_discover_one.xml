<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <ImageView
        android:id="@+id/iv_discover_img_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/tv_item_discover_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和哈哈哈哈哈哈哈哈哈 "
            android:textColor="@color/comm_gray_high"
            android:textSize="@dimen/txt_size_first" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">


            <com.youpin.comic.publicviews.RatingBar
                android:id="@+id/tv_one_show_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:starCount="5"
                app:starEmpty="@drawable/star_empty"
                app:starFill="@drawable/star_full"
                app:starHalf="@drawable/star_half"
                app:starImageSize="10dp"
                app:starPadding="1dp"
                app:starStep="0.0"
                app:stepSize="Half" />

            <TextView
                android:id="@+id/tv_discover_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="7dp"
                android:text="hhh"
                android:textColor="@color/comm_gray_low"
                android:textSize="@dimen/txt_size_fourth" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="@color/comm_gray_low"
            android:textSize="@dimen/txt_size_fifths" />


        <TextView
            android:id="@+id/tv_discover_cartoon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和哈哈哈哈哈哈哈哈哈 "
            android:textColor="@color/comm_gray_low"
            android:textSize="@dimen/txt_size_fifths" />


        <TextView
            android:id="@+id/tv_discover_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="和哈哈哈哈哈哈哈哈哈 "
            android:textColor="@color/comm_gray_low"
            android:textSize="@dimen/txt_size_fifths" />


    </LinearLayout>
</LinearLayout>